println("a * b = " + str(a * b))
println("a / b = " + str(a / b))
println("a % b = " + str(a % b))

# 测试条件语句
if a > b
    println("a 大于 b")
else
    println("a 小于或等于 b")
endif

# 测试while循环
let count = 0
while count < 5
    println("循环次数: " + str(count))
    set count = count + 1
endwhile

# 测试for循环
let numbers = list(1, 2, 3, 4, 5)
for i in numbers
    println("计数循环: " + str(i))
endfor

# 测试函数定义和调用
func add(x, y)
    return x + y
endfunc

let result = add(a, b)
println("add(a, b) = " + str(result))

